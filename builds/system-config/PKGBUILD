  make
  pacman
  patch
  pkgconf
  sed
  sudo
  texinfo
  which
)

depends+=(
  acpi_call # needed for battery charge threshold in tlp
  adobe-source-code-pro-fonts
  adobe-source-han-sans-jp-fonts # needed for some emojis characters ¯\_(ツ)_/¯
