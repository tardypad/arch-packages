pkgbase=system-config
pkgname=(
  'system-config-light'
  'system-config-dark'
)
pkgver=108
pkgrel=1
pkgdesc='System configurations'
url='https://github.com/tardypad/arch-packages'
arch=('any')
license=('custom')

conflicts=(
  'system-config'
)

provides=(
  'system-config'
)

replaces=(
  'system-config'
)

install=system-config.install

# base installation
depends=(
  base
  linux
  linux-firmware
  efibootmgr
  grub
  intel-ucode
  os-prober
)

# base-devel group packages
depends=(
