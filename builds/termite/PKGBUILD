pkgname=termite
pkgver=14.91
pkgrel=1
pkgdesc="A simple VTE-based terminal"
url="https://github.com/thestinger/termite/"
arch=('x86_64')
license=('LGPL')

depends=(
  'gtk3'
  'ncurses'
  'vte3'
  'vte-common'
)

source=(
  "https://github.com/tardypad/termite/archive/v${pkgver}.tar.gz"
)

sha512sums=(
  '1a52a3906b3dacefb1975913ef7930f14a9558d52906bfa1faccd85e5d5a006767d3cf47d339c239cb81e0706726b2a80db419b0549cbfe0c54fc021cb0710cd'
)

backup=(
  'etc/xdg/termite/config'
)

build() {
  cd "${pkgname}-${pkgver}"
  make
}

package_termite() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}
