pkgname=termite
pkgver=14.92
pkgrel=1
pkgdesc="A simple VTE-based terminal"
url="https://github.com/thestinger/termite/"
arch=('x86_64')
license=('LGPL')

depends=(
  'gtk3'
  'ncurses'
  'vte3'
  'vte-common'
)

source=(
  "https://github.com/tardypad/termite/archive/v${pkgver}.tar.gz"
)

sha512sums=(
  '5f929f71d191e40ebe3e54e25d149d3659740da64a0b3c1c767eea840fffb98fcdfd1d61c7e4c71f9f7fe2e143375f898bc6cc21444346f2ca9b7f3dc3c76db8'
)

backup=(
  'etc/xdg/termite/config'
)

build() {
  cd "${pkgname}-${pkgver}"
  make
}

package_termite() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}
