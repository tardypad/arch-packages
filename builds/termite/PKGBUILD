pkgname=termite
pkgver=14.90
pkgrel=2
pkgdesc="A simple VTE-based terminal"
url="https://github.com/thestinger/termite/"
arch=('x86_64')
license=('LGPL')

depends=(
  'gtk3'
  'ncurses'
  'vte3'
  'vte-common'
)
makedepends=(
  'git'
)

source=(
  "git+https://github.com/tardypad/termite#tag=v${pkgver}"
)

sha512sums=(
  'SKIP'
)

backup=(
  'etc/xdg/termite/config'
)

build() {
  cd "${pkgname}"
  make
}

package_termite() {
  cd "${pkgname}"
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}
