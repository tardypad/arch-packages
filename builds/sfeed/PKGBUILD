pkgname=sfeed
pkgver=0.9.13
pkgrel=1
pkgdesc='RSS and Atom parser'
arch=('x86_64')
url='https://codemadness.org/git/sfeed'
license=('ISC')

optdepends=(
  'curl: fetch feeds'
)

source=(
  https://codemadness.org/releases/${pkgname}/${pkgname}-${pkgver}.tar.gz
)

sha512sums=(
  '1b699421ef47e67b3deff0dd126e1d4b9b4dc2f26876e1f8b9d413a0d03bbca229076ccb37b6b28b2680e7322d90f50bc71b0fa8a8bfef082ce8fd678200e239'
)

build() {
  cd "${pkgname}-${pkgver}"
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" PREFIX=/usr MANPREFIX=/usr/share/man DOCPREFIX=/usr/share/doc/sfeed install
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/${pkgname}/LICENCE"
}
